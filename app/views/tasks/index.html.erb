<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= search_form_for @q, url: tasks_path, method: :get do |f| %>
  <%= f.label :title_or_description_cont, "キーワード" %>
    <%= f.search_field :title_or_description_cont, class: 'form-control font-awesome' %>

  <label for="start_date">期間</label>
    <%= f.date_field :deadline_gteq, class: 'form-control' %>
    <label for="end_date"> ~ </label>
    <%= f.date_field :deadline_lteq, class: 'form-control' %>


  <label for="status">ステータス</label>
      <%= radio_button_tag :status_eq, '', checked: @status.blank?, id: 'status_none' %>
      <%= label_tag :status_none, '指定なし' %>

      <%= radio_button_tag :status_eq, 'todo', params[:status] == 'todo', id: 'status_todo' %>
      <%= label_tag :status_todo, 'todo' %>

      <%= radio_button_tag :status_eq, 'doing', params[:status] == 'doing', id: 'status_doing' %>
      <%= label_tag :status_doing, 'doing' %>


      <%= radio_button_tag :status_eq, 'done', params[:status] == 'done', id: 'status_done' %>
      <%= label_tag :status_done, 'done' %>

    <%= f.submit "Search", class: 'btn btn-primary' %>
  
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th><%= sort_link(@q, :deadline, 'Deadline', default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
